<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :autofocus => true, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :autofocus => true, :class => 'text_field' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>

	<div class="control-group">
		<%= f.label :remember_me, :class => 'control-label' %>
		<div class="controls">
		  <%= f.check_box :remember_me, :autofocus => true, :class => 'text_field' %>
		</div>
	</div>

  <% end -%>

  <div><%= f.submit "Sign in", :class => 'btn btn-success' %></div>
<% end %>

<%= render "devise/shared/links" %>
