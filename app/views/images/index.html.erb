<%- model_class = Image -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:latitude) %></th>
      <th><%= model_class.human_attribute_name(:longitude) %></th>
      <th><%= model_class.human_attribute_name(:location_description) %></th>
      <th><%= model_class.human_attribute_name(:fullsize_url) %></th>
      <th><%= model_class.human_attribute_name(:thumbnail_url) %></th>
      <th><%= model_class.human_attribute_name(:copyright) %></th>
      <th><%= model_class.human_attribute_name(:caption) %></th>
      <th><%= model_class.human_attribute_name(:relevant_from) %></th>
      <th><%= model_class.human_attribute_name(:relevant_to) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= link_to image.id, image_path(image) %></td>
        <td><%= image.latitude %></td>
        <td><%= image.longitude %></td>
        <td><%= image.location_description %></td>
        <td><%= image.fullsize_url %></td>
        <td><%= image.thumbnail_url %></td>
        <td><%= image.copyright %></td>
        <td><%= image.caption %></td>
        <td><%= image.relevant_from %></td>
        <td><%= image.relevant_to %></td>
        <td><%=l image.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_image_path(image), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      image_path(image),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_image_path,
            :class => 'btn btn-primary' %>
