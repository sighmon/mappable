<%= form_for @image, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :latitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :latitude, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :longitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :longitude, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location_description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :location_description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fullsize_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fullsize_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :thumbnail_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :thumbnail_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :copyright, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :copyright, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :caption, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :caption, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :relevant_from, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :relevant_from, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :relevant_to, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :relevant_to, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                images_path, :class => 'btn' %>
  </div>
<% end %>
