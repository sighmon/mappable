<%- model_class = Image -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @image.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @image.longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location_description) %>:</strong></dt>
  <dd><%= @image.location_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fullsize_url) %>:</strong></dt>
  <dd><%= @image.fullsize_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:thumbnail_url) %>:</strong></dt>
  <dd><%= @image.thumbnail_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:copyright) %>:</strong></dt>
  <dd><%= @image.copyright %></dd>
  <dt><strong><%= model_class.human_attribute_name(:caption) %>:</strong></dt>
  <dd><%= @image.caption %></dd>
  <dt><strong><%= model_class.human_attribute_name(:relevant_from) %>:</strong></dt>
  <dd><%= @image.relevant_from %></dd>
  <dt><strong><%= model_class.human_attribute_name(:relevant_to) %>:</strong></dt>
  <dd><%= @image.relevant_to %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              images_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_image_path(@image), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              image_path(@image),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
